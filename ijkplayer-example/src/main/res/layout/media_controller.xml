<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <CheckBox
        android:id="@+id/btn_bigPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:button="@null"
        android:background="@drawable/shape_big_play_btn_bg"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_mediaOpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_media_opt_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/btn_rew"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@android:drawable/ic_media_rew"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"/>

        <CheckBox
            android:id="@+id/btn_play"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:button="@null"
            android:background="@drawable/selector_media_controller_play" />

        <ImageButton
            android:id="@+id/btn_fwd"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@android:drawable/ic_media_ff"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_playTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@android:color/white"
            android:text="00:00"
            android:layout_marginLeft="10dp"/>

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@android:color/white"
            android:text="00:00"/>

        <CheckBox
            android:id="@+id/btn_fullScreen"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:button="@null"
            android:background="@android:drawable/ic_menu_help"/>
    </LinearLayout>
</FrameLayout>