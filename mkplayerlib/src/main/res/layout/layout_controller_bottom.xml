<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_mediaOpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_media_opt_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom">

    <ImageButton
        android:id="@+id/btn_rew"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="8dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/rew"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/selector_media_controller_play"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/btn_fwd"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="8dp"
        android:src="@mipmap/fwd"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_playTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@android:color/white"
        android:text="00:00"
        android:layout_marginLeft="10dp"/>

    <SeekBar
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="8sp"
        android:textColor="@android:color/white"
        android:text="00:00"/>

    <ImageButton
        android:id="@+id/btn_fullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/selector_fullscreen"
        android:background="@android:color/transparent"/>
    </LinearLayout>
</merge>